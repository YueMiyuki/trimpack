{
  "name": "trimpack",
  "version": "1.0.1",
  "description": "Automatic monorepo dependency packer - Bundle and pack only the dependencies your code actually uses",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "monorepo",
    "dependencies",
    "packer",
    "bundler",
    "dependency-analysis",
    "tree-shaking",
    "optimization",
    "esbuild",
    "package-management",
    "build-tool",
    "dependency-management",
    "npm",
    "pnpm",
    "yarn",
    "workspace"
  ],
  "author": "YueMiyuki <me@miyuki-yue.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YueMiyuki/trimpack.git"
  },
  "bugs": {
    "url": "https://github.com/YueMiyuki/trimpack/issues"
  },
  "homepage": "https://github.com/YueMiyuki/trimpack#readme",
  "bin": {
    "trimpack": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "packageManager": "pnpm@10.8.1",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "prebuild": "pnpm run clean",
    "dev": "tsx src/cli.ts",
    "test:cli": "pnpm run build && node test/test-all-options.js",
    "test:api": "pnpm run build && node test/test-programmatic-api.js",
    "test:config": "pnpm run build && node test/test-config-files.js",
    "test:all": "pnpm run typecheck && pnpm run test:cli && pnpm run test:api && pnpm run test:config",
    "test:example": "pnpm run build && node examples/basic.js src/index.ts packed.json",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build && pnpm run test:all",
    "prepare": "node .husky/install.mjs",
    "lint": "pnpm dlx lint-staged"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "esbuild": "^0.25.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.8.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.4",
    "prettier": "3.6.2",
    "typescript-eslint": "^8.46.1"
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint --fix",
    "**/*.{js,ts,json,yaml,css,md,mjs}": "prettier -w"
  }
}
