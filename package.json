{
  "name": "trimpack",
  "version": "1.0.1",
  "description": "Automatic monorepo dependency packer - Bundle and pack only the dependencies your code actually uses",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "monorepo",
    "dependencies",
    "packer",
    "bundler",
    "dependency-analysis",
    "tree-shaking",
    "optimization",
    "package-management",
    "build-tool",
    "dependency-management",
    "npm",
    "pnpm",
    "yarn",
    "workspace"
  ],
  "author": "YueMiyuki <me@miyuki-yue.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YueMiyuki/trimpack.git"
  },
  "bugs": {
    "url": "https://github.com/YueMiyuki/trimpack/issues"
  },
  "homepage": "https://github.com/YueMiyuki/trimpack#readme",
  "bin": {
    "trimpack": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "build": "tsgo -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "prebuild": "pnpm run clean",
    "test:cli": "pnpm run build && node test/test-all-options.js",
    "test:api": "pnpm run build && node test/test-programmatic-api.js",
    "test:config": "pnpm run build && node test/test-config-files.js",
    "test:all": "pnpm run check-types && pnpm run test:cli && pnpm run test:api && pnpm run test:config && node test/run-unit-tests.js",
    "test:example": "pnpm run build && node examples/basic.js src/index.ts packed.json",
    "check-types": "concurrently -n transpile,types -c cyan,magenta \"pnpm run check-types:transpile\" \"tsgo -p tsconfig.json\" && rm -rf .swc",
    "check-types:transpile": "swc src --out-dir .swc --ignore '**/*.d.ts' --ignore 'node_modules'",
    "prepublishOnly": "pnpm run build && pnpm run test:all",
    "prepare": "node .husky/install.mjs",
    "lint": "eslint --fix .",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.0",
    "@types/node": "^24.10.0",
    "@typescript/native-preview": "7.0.0-dev.20251105.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "prettier": "3.6.2",
    "typescript-eslint": "^8.46.3"
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint --fix",
    "**/*.{js,ts,json,yaml,css,md,mjs}": "prettier -w"
  }
}
